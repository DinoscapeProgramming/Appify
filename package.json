{
  "name": "appify",
  "productName": "Appify",
  "version": "1.0.0",
  "description": "A tiny tool that allows you to turn your website into an app",
  "main": "index.js",
  "scripts": {
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "rimraf": "^5.0.5"
  },
  "devDependencies": {
    "electron": "^28.2.2",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "appify",
    "productName": "Appify",
    "target": "NSIS",
    "directories": {
      "output": "build"
    },
    "icon": "assets/favicon.ico",
    "nsis": {
      "installerIcon": "assets/favicon.ico",
      "installerHeaderIcon": "assets/favicon.ico",
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    }
  }
}
